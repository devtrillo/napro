{
	"name": "napro",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:auth:generate": "npx @better-auth/cli generate --output src/lib/server/db/auth-schema.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"dev": "conc \"npm:dev:*\"",
		"dev:db": "docker compose up",
		"dev:db:studio": "drizzle-kit studio",
		"dev:ui": "vite dev",
		"dev:zero-sync": "wait-on tcp:5430 && zero-cache-dev -p \"./src/lib/zero/cli.ts\"",
		"format": "prettier --write .",
		"generate": "dotenvx run -- drizzle-zero generate --format -o src/lib/zero/schema.ts",
		"postinstall": "pnpm generate",
		"lint": "prettier --check . && eslint .",
		"machine-translate": "inlang machine translate --project project.inlang",
		"prepare": "husky",
		"preview": "vite preview",
		"shadcn": "pnpm dlx shadcn-svelte@latest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"test:unit": "vitest"
	},
	"lint-staged": {
		"package.json": "sort-package-json",
		"*.{js,ts,svelte}": "eslint --fix",
		"*": "prettier --ignore-unknown --write"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "^1.49.1",
		"@rocicorp/zero": "^0.23.2025090100",
		"better-auth": "^1.3.12",
		"mode-watcher": "^1.1.0",
		"postgres": "^3.4.7"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.35.0",
		"@inlang/cli": "^3.0.12",
		"@inlang/paraglide-js": "2.3.2",
		"@internationalized/date": "^3.9.0",
		"@lucide/svelte": "^0.544.0",
		"@playwright/test": "^1.55.0",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.42.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.13",
		"@types/node": "^22",
		"@vitest/browser": "^3.2.4",
		"bits-ui": "^2.10.0",
		"clsx": "^2.1.1",
		"concurrently": "^9.2.1",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.5",
		"drizzle-zero": "^0.14.0",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-boundaries": "^5.0.1",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-sort-keys-fix": "^1.1.2",
		"eslint-plugin-svelte": "^3.12.3",
		"eslint-plugin-unused-imports": "^4.2.0",
		"formsnap": "^2.0.1",
		"globals": "^16.4.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.6",
		"playwright": "^1.55.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"sort-package-json": "^3.4.0",
		"svelte": "^5.39.2",
		"svelte-check": "^4.3.1",
		"sveltekit-superforms": "^2.27.1",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.1.13",
		"tw-animate-css": "^1.3.8",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.0",
		"vite": "^7.1.6",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^0.1.0",
		"wait-on": "^9.0.0",
		"zero-svelte": "^0.3.5",
		"zod": "^4.1.9"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@rocicorp/zero-sqlite3",
			"@tailwindcss/oxide",
			"esbuild",
			"protobufjs"
		]
	}
}
